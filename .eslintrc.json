{
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["react-hooks"],
    "rules": {
        "indent": ["error", 2],
        "semi": [2, "always"],
        "react-hooks/rules-of-hooks": "error"
    }
}